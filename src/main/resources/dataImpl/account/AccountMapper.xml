<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.vivo.data.account.AccountMapper">
    <parameterMap id="UserPO" type="com.example.vivo.po.UserPO">
        <parameter property="id"/>
        <parameter property="username"/>
        <parameter property="password"/>
        <parameter property="signupDate"/>
        <parameter property="authority"/>
    </parameterMap>

    <resultMap id="UserPO" type="com.example.vivo.po.UserPO">
    </resultMap>

    <insert id="insertUser" parameterMap="UserPO" useGeneratedKeys="true">
        insert into user(id,username,password,signupDate,authority)
        values (#{id},#{username},#{password},#{signupDate},#{authority})
    </insert>

    <select id="selectUserById" resultMap="UserPO">
        select * from user where id=#{id}
    </select>

    <select id="selectUserByName" resultMap="UserPO">
        select * from user where username=#{username}
    </select>

</mapper>